<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.nhc.i_doc" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >

        <activity
            android:name="no.nhc.i_doc.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="no.nhc.i_doc.EditEvidenceActivity"
            android:label="@string/edit_evidence"
            android:parentActivityName="no.nhc.i_doc.MainActivity">
        </activity>

        <activity
            android:name="no.nhc.i_doc.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName="no.nhc.i_doc.SettingsActivity">
        </activity>

        <activity
            android:name="no.nhc.i_doc.ViewEvidenceActivity"
            android:label="@string/view_evidence"
            android:parentActivityName="no.nhc.i_doc.MainActivity">
        </activity>

        <activity
            android:name="no.nhc.i_doc.GenericFormActivity">
        </activity>

    </application>

  <uses-feature android:name="android.hardware.camera"
                android:required="true" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

</manifest>
