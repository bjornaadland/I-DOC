<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    tools:context="no.nhc.i_doc.CaptureFragment">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ic_large"
        android:src="@drawable/ic_large"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Take picture"
        android:id="@+id/text_take_picture"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/ic_large"
        android:layout_toRightOf="@+id/ic_large"
        android:layout_marginLeft="100dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Record video"
            android:id="@+id/text_record_video"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/text_take_picture"
            android:layout_toRightOf="@+id/ic_large"
            android:layout_marginLeft="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Record sound"
        android:id="@+id/text_record_sound"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_record_video"
        android:layout_toRightOf="@+id/ic_large"
        android:layout_marginLeft="100dp"/>

</RelativeLayout>
